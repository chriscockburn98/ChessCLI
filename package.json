{
  "name": "chesscli",
  "version": "1.0.0",
  "description": "Chess CLI Implementation",
  "main": "index.js",
  "engines": {
    "node": ">=20.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run test && tsc",
    "dev": "nodemon --exec node --loader ts-node/esm --require tsconfig-paths/register src/index.ts",
    "dev:moves": "nodemon -I --exec node --loader ts-node/esm --require tsconfig-paths/register src/index.ts --show-moves",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chriscockburn98/ChessCLI"
  },
  "author": "chriscockburn98",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "inquirer": "^12.3.0"
  },
  "bin": {
    "chesscli": "./dist/index.js"
  },
  "type": "module",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "ts-node": {
    "esm": true
  }
}
